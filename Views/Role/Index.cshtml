
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<div class="container">
    <h2>All Roles</h2>
    <a asp-action="Create" class="btn btn-secondary">Create a Role</a>
    <table class="table table-sm table-bordered">
        <tr><th>Id</th><th>Role Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td i-role="@role.Id"></td>
                <td>
                    <form asp-action="Update" asp-route-id="@role.Id" method="get">
                        <button type="submit" class="btn btn-info">Update</button>
                    </form>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>