
@model List<UserViewModel>
    <div class="row">
        <h1 class="table">All Users</h1>
    </div>
    <div class="row">
        <a asp-action="Create" class="btn btn-primary mb-2">Create</a>
    </div>

<table class="table table-sm table-bordered">
    <tr><th>Id</th><th>First Name</th><th>Last Name</th><th>Email</th><th></th></tr>
    @foreach (ManageProjects.ViewModels.UserViewModel user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="Update" asp-route-id="@user.Id" method="get">
                    <button type="submit" class="btn btn-info">Update</button>
                </form>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
     }
</table>
